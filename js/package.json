{
  "name": "agent-commander",
  "version": "0.1.0",
  "description": "A JavaScript library to control agents enclosed in CLI commands like Anthropic Claude Code CLI",
  "type": "module",
  "main": "./src/index.mjs",
  "exports": {
    ".": "./src/index.mjs"
  },
  "bin": {
    "start-agent": "./bin/start-agent.mjs",
    "stop-agent": "./bin/stop-agent.mjs"
  },
  "scripts": {
    "test": "node --test --test-name-pattern=\".*\" test/",
    "test:node": "node --test --test-name-pattern=\".*\" test/",
    "test:bun": "bun test",
    "test:deno": "deno test --allow-read --allow-run --allow-env --allow-net test/",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check:duplication": "jscpd .",
    "check": "npm run lint && npm run format:check && npm run check:duplication",
    "prepare": "cd .. && husky js/.husky || true",
    "changeset": "changeset",
    "changeset:version": "node ../scripts/js/changeset-version.mjs",
    "changeset:publish": "changeset publish",
    "changeset:status": "changeset status --since=origin/main",
    "example": "node examples/basic-usage.mjs"
  },
  "keywords": [
    "agent",
    "cli",
    "automation",
    "process-management",
    "ai",
    "commander"
  ],
  "author": "",
  "license": "Unlicense",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.35.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/link-assistant/agent-commander.git"
  },
  "lint-staged": {
    "*.{js,mjs,cjs}": [
      "eslint --fix --max-warnings 0",
      "prettier --write",
      "prettier --check"
    ],
    "*.md": [
      "prettier --write",
      "prettier --check"
    ]
  }
}
